<div class="container">
  <h2><%= @user.name %> さんとのチャット</h2>
  <div class="message">
    <%= render "chats/message", chats: @chats, user: @user, my_name: @my_name %>
  </div>
  
  <%= form_with model: @chat, data: {remote: true} do |f| %>
    <div class="errors">
      <%= render "layouts/errors", obj: f.object %>
    </div>
    <div class="form-group">
      <%= f.text_field :message, placeholder: "メッセージを入力してください", autocomplete: "off", class: 'form-control book_body' %>
    　<%= f.hidden_field :room_id, value: @room.id %>
    </div>
    <%= f.submit "送信", class:"btn btn-success" %>
  <% end %>
</div>
